{
  "include": ["cypress/tests/**/*.ts", "cypress/support/**/*.ts"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": ["cypress", "node"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES5",
    "paths": {
      "@cypress/*": ["./cypress/*"]
    }
  }
}
